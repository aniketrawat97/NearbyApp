<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fa0b6"
    tools:context=".CustomerSignupActivity">

    <EditText
        android:id="@+id/ET_Store_signup_name"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/rectangle_code"
        android:elevation="7dp"
        android:gravity="center"
        android:hint="Name"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_store_singup" />

    <EditText
        android:id="@+id/ET_Store_signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/rectangle_code"
        android:elevation="7dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_Store_signup_name" />

    <EditText
        android:id="@+id/ET_Store_signup_set_pswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/rectangle_code"
        android:elevation="7dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Set password"
        android:inputType="textPassword"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_Store_signup_email" />

    <TextView
        android:id="@+id/TV_Store_Signup_Button"
        android:layout_width="190dp"
        android:layout_height="63dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/rectangle_code"
        android:backgroundTint="#EC7373"
        android:elevation="7dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="Signup"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_Store_signup_set_pswd" />

    <TextView
        android:id="@+id/TV_store_singup"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff"
        android:gravity="center"
        android:text="CUSTOMER SIGNUP"
        android:textStyle="bold"
        android:textColor="#EC7373"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>