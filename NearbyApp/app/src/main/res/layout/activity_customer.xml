<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/TV_Prod_details"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#7C7C7C"
            android:gravity="center"
            android:text="STORES NEAR YOU"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/IV_Prod_details"
            app:layout_constraintStart_toStartOf="@+id/IV_Prod_details"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/listView_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TV_Prod_details">


        </ListView>
</androidx.constraintlayout.widget.ConstraintLayout>